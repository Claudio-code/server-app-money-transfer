{
    "openapi": "3.0.0",
    "info": {
        "title": "Money Transfer",
        "description": "Documentação da api de transferencia de dinheiro.",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/api/"
        }
    ],
    "paths": {
        "/transfer/": {
            "post": {
                "description": "rota de transferencia de dinheiro entre os usuarios.",
                "requestBody": {
                    "$ref": "#/components/requestBodies/MoneyTransferDTO"
                },
                "responses": {
                    "200": {
                        "description": "dinheiro transferido"
                    },
                    "400": {
                        "description": "Erro dinheiro insuficiente.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "type": {
                                            "type": "string",
                                            "default": "App\\\\MoneyTransfer\\\\Wallet\\\\InsufficientMoneyTransferException"
                                        },
                                        "error": {
                                            "type": "string",
                                            "default": "Dinheiro insuficiente para fazer a transferencia."
                                        },
                                        "file": {
                                            "type": "string",
                                            "default": "/var/www/src/MoneyTransfer/Wallet/InsufficientMoneyTransferException.php"
                                        },
                                        "line": {
                                            "type": "int",
                                            "default": 11
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/": {
            "post": {
                "description": "Cadastro de novos usuarios.",
                "requestBody": {
                    "$ref": "#/components/requestBodies/CreateUserDTO"
                },
                "responses": {
                    "201": {
                        "description": "criação de usuario",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro de usuario já existente na base.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "type": {
                                            "type": "string",
                                            "default": "App\\\\MoneyTransfer\\\\User\\\\Create\\\\UserAlreadyExistsException"
                                        },
                                        "error": {
                                            "type": "string",
                                            "default": "o usuario do cpf 02305232924 já existe no sistema."
                                        },
                                        "file": {
                                            "type": "string",
                                            "default": "/var/www/src/MoneyTransfer/User/Create/UserAlreadyExistsException.php"
                                        },
                                        "line": {
                                            "type": "int",
                                            "default": 1
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "properties": {
                    "name": {
                        "type": "string",
                        "default": "carlos"
                    },
                    "email": {
                        "type": "email",
                        "default": "shopkeeper@gmail.com"
                    },
                    "roles": {
                        "type": "roles",
                        "default": "ROLE_SHOPKEEPER"
                    }
                },
                "type": "object"
            }
        },
        "requestBodies": {
            "MoneyTransferDTO": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "userSendingMoney": {
                                    "type": "string",
                                    "default": "37584366058"
                                },
                                "userReceivingMoney": {
                                    "type": "string",
                                    "default": "02305232924"
                                },
                                "money": {
                                    "type": "float",
                                    "default": 2.22
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "CreateUserDTO": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "default": "antoino"
                                },
                                "email": {
                                    "type": "string",
                                    "default": "user@gmail.com"
                                },
                                "cpf": {
                                    "type": "string",
                                    "default": "68308284914"
                                },
                                "cnh": {
                                    "type": "string",
                                    "default": "1332341242"
                                },
                                "roles": {
                                    "type": "string",
                                    "default": "ROLE_USER"
                                },
                                "password": {
                                    "type": "string",
                                    "default": "AmarElo_2"
                                },
                                "money": {
                                    "type": "float",
                                    "default": 2.22
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        }
    }
}